{#
/**
 * @file
 * Template for the main page.
 */
#}
{% set page_attributes = page_attributes ?: create_attribute() %}
{% set 
  page_classes = [
    'page'
  ]|merge(page_utility_classes ? page_utility_classes : []) 
%}
{% block alerts %}
{% if page.alerts %}
  {{ page.alerts }}
{% endif %}
{% endblock %}
<div {{ page_attributes.addClass(page_classes) }}>
  {% block page_navigation %}
    {% include 'xtra:page-navigation' %}
  {% endblock %}

  {% block page_content %}
    {% include 'xtra:page-content' %}
  {% endblock %}

  {% block page_footer %}
    {% include 'xtra:page-footer' %}
  {% endblock %}
</div>
